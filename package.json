{
  "name": "@emanimation/pinia-plugin-history",
  "version": "1.3.1",
  "description": "Create a history (undo/redo) in your pinia üçç stores!",
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "unpkg": "dist/index.global.js",
  "jsdelivr": "dist/index.global.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "require": "./dist/index.js",
    "import": "./dist/index.mjs"
  },
  "sideEffects": false,
  "authors": [
    {
      "name": "Yasser Lahbibi",
      "email": "yasser.lahbibi@sciencespo.fr"
    },
    {
      "name": "Emmanuel Mahuni",
      "email": "emahuni@gmail.com"
    }
  ],
  "scripts": {
    "dev": "vitest --browser",
    "release": "node scripts/release.mjs",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 1",
    "test:open": "vitest --browser",
    "test": "vitest",
    "lint": "prettier -c --parser typescript \"src/**/*.[jt]s?(x)\"",
    "lint:fix": "yarn run lint --write",
    "test:types": "tsc --build ./tsconfig.json",
    "build": "yarn build:esm & yarn build:iife & wait",
    "build:esm": "tsup src/index.ts --format esm,cjs --dts --target es2020",
    "build:iife": "tsup src/index.ts --format iife --minify --global-name PiniaHistory --target es2020"
  },
  "files": [
    "dist/*.js",
    "dist/*.mjs",
    "dist/*.d.ts",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "pinia",
    "plugin",
    "history",
    "undo",
    "redo"
  ],
  "license": "MIT",
  "dependencies": {
    "lzutf8": "^0.6.0"
  },
  "devDependencies": {
    "@pinia/testing": "^0.0.14",
    "@types/node": "^16.4.13",
    "@vitest/browser": "^0.26.2",
    "chalk": "^4.1.2",
    "conventional-changelog-cli": "^2.1.1",
    "enquirer": "^2.3.6",
    "esbuild-register": "^2.6.0",
    "execa": "^5.1.1",
    "lint-staged": "^11.1.2",
    "minimist": "^1.2.5",
    "mock-local-storage": "^1.1.17",
    "nyc": "^15.1.0",
    "pinia": "^2.0.28",
    "prettier": "^2.0.5",
    "semver": "^7.3.5",
    "source-map-support": "^0.5.19",
    "ts-node": "^10.1.0",
    "tsup": "^4.13.1",
    "typescript": "^4.3.5",
    "vitest": "^0.26.2",
    "vue": "^3.2.0-beta.7",
    "yorkie": "^2.0.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "node scripts/verifyCommit.js"
  },
  "lint-staged": {
    "*.?(m)js": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yassilah/pinia-plugin-history.git"
  },
  "bugs": {
    "url": "https://github.com/yassilah/pinia-plugin-history/issues"
  },
  "homepage": "https://github.com/yassilah/pinia-plugin-history#readme"
}
